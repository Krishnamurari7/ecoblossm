{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Navbar.jsx", "components/ProductCard.jsx", "app/layout.js", "app/page.js", "components/ProductShowcase.jsx", "components/Marquee.jsx", "app/product/[id]/page.js", "context/CartContext.js", "components/ThemeToggle.jsx", "components/Testimonials.jsx", "app/about/page.js", "app/contact/page.js", "app/blog/page.js", "app/blog/[id]/page.js", "app/privacy/page.js"],
  "exclude": ["node_modules"]
}


